{
    "name": "blackcatacademy/blackcat-messaging",
    "description": "Unified messaging, job queue, and scheduler engine for the BlackCat platform.",
    "type": "library",
    "license": "proprietary",
    "require": {
        "php": "^8.3",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "psr/log": "^3.0",
        "blackcatacademy/blackcat-core": "dev-dev",
        "blackcatacademy/blackcat-database": "dev-dev"
    },
    "autoload": {
        "psr-4": {
            "BlackCat\\Messaging\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BlackCat\\Messaging\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/messaging",
        "bin/event-outbox-worker",
        "bin/webhook-outbox-worker"
    ],
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.11"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
